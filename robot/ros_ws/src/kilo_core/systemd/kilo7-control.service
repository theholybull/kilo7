[Unit]
Description=KILO7 Control PWM (kilo_core)
After=network-online.target pigpiod.service
Wants=network-online.target pigpiod.service

[Service]
Type=simple
User=kilo
EnvironmentFile=-/etc/default/kilo7
EnvironmentFile=-/opt/kilo7/kilo7-backend.env
ExecStart=/bin/bash -lc 'source ${KILO_ROS_WS:-/opt/kilo7/robot/ros_ws}/install/setup.bash && ros2 run kilo_core control_pwm --ros-args -p config:=${KILO_CONFIG:-""}'
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
